{
  "name": "Bubbles",
  "version": "0.0.1",
  "description": "Chat app using Redis, Socket.io and Hapi",
  "main": "server.js",
  "scripts": {
    "test": "./node_modules/tape/bin/tape ./test/*.js | tap-nyan && npm run coverage && npm run jshint",
    "coverage": "istanbul cover ./node_modules/tape/bin/tape ./test/*.js && istanbul check-coverage --statements 100 --functions 100 --lines 100 --branches 100",
    "jshint": "jshint .",
    "start": "node server.js",
    "nodemon": "nodemon server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heron2014/Bubbles.git"
  },
  "keywords": [
    "chat",
    "redis",
    "hapi",
    "retro",
    "90s"
  ],
  "author": "heron2014, nofootnotes",
  "license": "GPL",
  "bugs": {
    "url": "https://github.com/heron2014/Bubbles/issues"
  },
  "dependencies": {
    "hapi": "^8.8.1",
    "socket.io": "^1.3.6"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.0",
    "istanbul": "^0.3.17",
    "jshint": "^2.8.0",
    "nodemon": "^1.4.0",
    "pre-commit": "^1.1.1",
    "tap-nyan": "0.0.2",
    "tape": "^4.0.1"
  },
  "pre-commit": [
    "jshint",
    "coverage"
  ]
}
